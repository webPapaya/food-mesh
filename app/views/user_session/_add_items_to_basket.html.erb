<h1>Elements in Comparison-Basket </h1>
    <nav id="secondary">
      <%= link_to "delete all items", bulk_delete_basket_path, :remote => true %>
      <%= link_to "compare items", compare_items_path %>
</nav>

<ul id="food-item-list">
  <% if user_session.get_user_items.class == Array %>
      <% user_session.get_user_items.each_with_index do |item, idx| %>
          <li data-item-idx="<%= item['_id'] %>">
            <span class="header">
              <%= item['name'] %>
              <span class="info"> per 100ml </span>
            </span>
            <span class="content clearfix">
            <% item['nutritions'].each do |key, value| %>
                <span class="ingredient">
                    <span class="highlighted"><%= key %></span>
                    <span class="simple"><%= value %></span>
                </span>
            <% end %>
            </span>
            <%= link_to 'go to element', get_food_item_path(item['_id']) %>
            <%= link_to 'delete element from basket',  delete_item_from_basket_path(idx), :remote => true %>
          </li>
    <% end %>
  <% end %>
</ul>

