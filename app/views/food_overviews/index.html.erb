<div>
  Search Result for: <%= params[:query] %>
</div>

<% if @results.length > 0 %>
    <ul>
      <% @results.each do |result| %>
        <li>
          <h1 class="name"><%= result[:name]%></h1>
          <h2> <%= @laguage %> </h2>
          <% result[:nutritions].each do |key, nutrition| %>
            <ul>
              <!-- <li class="<%= key %>"> <%= "[key] #{key} - [value] #{nutrition}"  %></li> -->
            </ul>
          <% end %>
        </li>
        <li>
          <%= link_to "go to element", :controller => :food_item, :action => :show, :api_id => result[:api_key], :food_id => result[:item_id]%>
          <%= link_to "add element to basket", :remote => true, :controller => :user_session,   :action => :add_items_to_basket, :api_id => result[:api_key], :food_id => result[:item_id]%>
        </li>
      <% end %>
    </ul>
<% else %>
    <div>
      no results found
    </div>
<% end %>
