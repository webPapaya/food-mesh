<h1>Listing line_charts</h1>

<svg width="<%= @window_width %>" height="<%= @window_height %>" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1">



  <!-- graph -->
  <% for i in 0..1%> <!-- later: foreach of the value hashes -->
      <% if i == 0 %>
        <% @values.each_with_index do |(name, value), index|%>
            <line x1="<%=@x1[index] %>" y1="<%= @y1[index] %>" x2="<%= @x2[index] %>" y2="<%= @y2[index] %>" stroke-linecap="round" stroke-width="4" style="stroke: #00BD97 ;"/>
              <text x="<%=@x1[index] %>" y="<%= @y1[index] %>"><%= name %></text>
            <!-- <path id="lineAB" d="M <%=@x1[index] %> <%= @y1[index] %> l <%= @x2[index] %> <%= @y2[index] %>" stroke="red" stroke-width="3" fill="none" /> -->
        <%end%>
      <%else%>
          <% @values2.each_with_index do |(name, value), index|%>
            <line x1="<%=@x_1[index]%>" y1="<%= @y_1[index]%>" x2="<%= @x_2[index] %>" y2="<%= @y_2[index] %>" stroke-linecap="round" stroke-width="4" style="stroke: #66A4D1 ;"/>
          <%end%>
      <%end%>
  <% end %>
</svg>

<% @values.each_with_index do |(name, value), index|%>
    <p id="ingredient"> <%= name %></p>
<% end %>

<style>
  #ingredient{
      float: center-align;

  }
</style>