<html>
<head>
  <title>Food</title>
  <meta charset="utf-8"/>
  <%= stylesheet_link_tag 'main', media: "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <% if logged_in? %>
        <% if current_user %>
          Logged in as <%= current_user.email %>.
          <%= link_to "log out | ", logout_path %>
          <%= link_to "create new user", signup_path %>
        <% else %>
          <%= link_to "log in", login_path %>.
        <% end %>
    <% end %>

    <% if current_page? '/' %>
        <%= render 'layouts/home' %>
    <% else %>
        <%= render 'layouts/page' %>
    <% end %>

<%= javascript_include_tag "application"  %>

</body>
</html>
