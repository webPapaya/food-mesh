<html>
<head>
  <title>Food</title>
  <meta charset="utf-8"/>
  <%= stylesheet_link_tag 'main', media: "all" %>
  <%= csrf_meta_tags %>
</head>
<body>

    <% if current_user %>
      Logged in as <%= current_user.email %>.
      <%= link_to "Log out", logout_path %>
    <% else %>
      <%= link_to "Sign up", signup_path %> or
      <%= link_to "log in", login_path %>.
    <% end %>

    <% if current_page? '/' %>
        <%= render 'layouts/home' %>
    <% else %>
        <%= render 'layouts/page' %>
    <% end %>

<%= javascript_include_tag "application"  %>

</body>
</html>
