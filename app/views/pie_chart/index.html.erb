

<%= @coords.inspect %>

<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1">
  <defs>
    <mask id="mask" x="0" y="0" width="<%= @center * 2%>" height="<%= @center * 2%>">
      <circle cx="<%= @center %>" cy="<%= @center %>" r="<%= @center %>" fill="white"/>
      <circle cx="<%= @center %>" cy="<%= @center %>" r="<%= @center/6 %>" fill="black"/>
    </mask>

    <% (0...@segments).each do |i| %>
        <mask id="mask<%=i%>" x="0" y="0" width="<%= @center * 2%>" height="<%= @center* 2 %>">
          <circle cx="<%= @center%>" cy="<%= @center%>" r="<%= Random.rand(90) + 10 %>" fill="white"/>
        </mask>
    <% end  %>

    <path id="pie" d="M <%= @center%> <%= @center%> L<%= @coords['x1'] %> <%= @coords['y1'] %> L<%= @coords['x2'] %> <%= @coords['y2'] %> Z" />
  </defs>


  <g mask="url(#mask)">
      <% (0...@segments).each do |i| %>
          <use mask="url(#mask<%=i%>)" transform="rotate(<%= @radius * i %>, <%= @center %>, <%= @center %>)"  xlink:href="#pie" fill="#2BA772" />
      <% end %>
  </g>
</svg>